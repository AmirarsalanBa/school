{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "720px",
			"wideSize": "1200px"
		},
		"spacing": {
			"units": [ "%", "px", "em", "rem", "vh", "vw" ]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"name": "System Font",
					"slug": "system-font"
				},
				{
					"fontFamily": "'Poppins', sans-serif",
					"name": "Poppins",
					"slug": "poppins",
					"fontFace": [
						{
							"fontFamily": "Poppins",
							"fontStyle": "normal",
							"fontWeight": "300 700",
							"src": [ "https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" ]
						}
					]
				}
			],
			"fluid": true,
			"fontSizes": [
				{
					"name": "Small",
					"slug": "small",
					"size": "clamp(14px, 1.2vw, 16px)"
				},
				{
					"name": "Medium",
					"slug": "medium",
					"size": "clamp(16px, 1.5vw, 18px)"
				},
				{
					"name": "Large",
					"slug": "large",
					"size": "clamp(20px, 2vw, 24px)"
				},
				{
					"name": "X-Large",
					"slug": "x-large",
					"size": "clamp(24px, 3vw, 32px)"
				}
			]
		},
		"color": {
			"palette": [
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#1E90FF"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#FF6347"
				},
				{
					"name": "Accent",
					"slug": "accent",
					"color": "#32CD32"
				},
				{
					"name": "Dark",
					"slug": "dark",
					"color": "#333333"
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"radius": "8px"
				},
				"color": {
					"background": "#0073aa",
					"text": "#ffffff"
				},
				"typography": {
					"fontSize": "16px",
					"fontWeight": "bold"
				}
			},
			"core/heading": {
				"typography": {
					"fontSize": "32px",
					"fontWeight": "700",
					"lineHeight": "1.2"
				},
				"color": {
					"text": "#333333"
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	]
}